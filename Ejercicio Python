Puthon:                                                                                       from datetime import datetime

class Clientes:
    def __init__(self, nombre, apellido, cedula, correo, telefono, direccion, fecha_nacimiento):
        self.nombre = nombre
        self.apellido = apellido
        self.cedula = cedula
        self.correo = correo
        self.telefono = telefono
        self.direccion = direccion
        self.fecha_nacimiento = fecha_nacimiento
            
        
    def datos(self):
        return {
            "Cedula": self.cedula,
            "Nombre": self.nombre,
            "Apellido": self.apellido,
            "Telefono": self.telefono,
            "Correo": self.correo,
            "Direccion": self.direccion,
            "Fecha de nacimiento": self.fecha_nacimiento,
        }
    
    def calcularEdad(self):
        añoNacimiento = int(self.fecha_nacimiento[:4])
        añoNacimiento_Actual = datetime.now().year
        return añoNacimiento_Actual - añoNacimiento
    
    def mensaje(self):
        edad = self.calcularEdad() 
        print(f"Mi nombre es {self.nombre} {self.apellido} vivo en {self.direccion} y tengo {edad} años de edad.")
        
        
Mateo = Clientes("Mateo", "Ramos Baena", 11264213 ,"mateo.ramosbaena@unitecnar.edu.co", "4125728885", "Campestre", "2000/07/04") 

Mateo.mensaje()
